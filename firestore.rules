rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - parent accounts
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Children subcollection - allow any authenticated user to write (for pairing)
      match /children/{childId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null; // Child devices can add themselves
      }
    }
    
    // Pairing codes collection
    match /pairingCodes/{code} {
      // Anyone authenticated can read (to verify code)
      allow read: if request.auth != null;
      
      // Only authenticated users can create pairing codes
      allow create: if request.auth != null 
        && request.resource.data.parentId == request.auth.uid;
      
      // Anyone authenticated can update (to mark as used)
      allow update: if request.auth != null;
      
      // Only owner can delete
      allow delete: if request.auth != null 
        && resource.data.parentId == request.auth.uid;
    }
    
    // Devices collection - child devices
    match /devices/{deviceId} {
      // Anyone authenticated can read device data
      allow read: if request.auth != null;
      
      // Authenticated users can create/update device data
      allow create, update: if request.auth != null;
      
      // Only parent can delete device
      allow delete: if request.auth != null 
        && resource.data.parentId == request.auth.uid;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Parent can read notifications for their children
      allow read: if request.auth != null;
      
      // Authenticated users can create notifications
      allow create: if request.auth != null;
      
      // Parent can update/delete
      allow update, delete: if request.auth != null;
    }
    
    // Location history
    match /locationHistory/{historyId} {
      allow read, write: if request.auth != null;
    }
    
    // Commands collection for parent-to-child commands
    match /commands/{commandId} {
      allow read, write: if request.auth != null;
    }
  }
}
